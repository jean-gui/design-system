{
    "name": "studio24/design-system",
    "description": "Simple documentation-first tool to build a static design system website based on Markdown documentation files and Twig templates",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">7.4.0",
        "twig/twig": "^3.0",
        "erusev/parsedown": "^1.7",
        "symfony/console": "^5.0",
        "symfony/stopwatch": "^5.0",
        "league/flysystem": "^2.2",
        "masterminds/html5": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Studio24\\DesignSystem\\": "src"
        }
    },
    "bin": [
        "bin/design-system"
    ]
}
