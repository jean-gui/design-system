{
    "name": "studio24/apollo",
    "description": "PHP based build system for a static Design System, based on the Apollo CSS framework",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.3.0",
        "twig/twig": "^3.0",
        "erusev/parsedown": "^1.7",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/console": "^5.0",
        "symfony/stopwatch": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Studio24\\Apollo\\": "php"
        }
    },
    "bin": ["apollo"],
    "config": {
        "bin-dir": "./"
    }
}
